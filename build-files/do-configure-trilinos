-DTrilinos_ENABLE_COMPLEX_DOUBLE=ON              \
-DTrilinos_ENABLE_COMPLEX_FLOAT=ON               \
-DTrilinos_ENABLE_Zoltan=ON                      \
-DTrilinos_VERBOSE_CONFIGURE=OFF                 \
